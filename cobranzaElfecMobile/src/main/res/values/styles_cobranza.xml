<?xml version="1.0" encoding="utf-8"?>

<!-- Generated with http://android-holo-colors.com -->
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Custom Font -->
    <style name="TextAppearance.CustomFont.Light" parent="android:TextAppearance">
        <item name="fontPath">fonts/segoe_ui_light.ttf</item>
    </style>

    <style name="TextAppearance.CustomFont.Semilight" parent="android:TextAppearance">
        <item name="fontPath">fonts/segoe_ui_semilight.ttf</item>
    </style>

    <style name="TextAppearance.CustomFont.Normal" parent="android:TextAppearance">
        <item name="fontPath">fonts/segoe_ui_.ttf</item>
    </style>

    <style name="TextAppearance.CustomFont.EditText" parent="android:TextAppearance">
        <item name="fontPath">fonts/segoe_ui.ttf</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- TextView -->
    <style name="TextView.Cobranza" parent="android:Widget.TextView">
        <item name="fontPath">fonts/segoe_ui.ttf</item>
    </style>

    <!-- EditText -->
    <style name="EditText.Cobranza" parent="android:Widget.EditText">
        <item name="android:background">@drawable/cobranza_edit_text_holo_dark</item>
        <item name="android:textColor">@color/text_blue_color</item>
        <item name="fontPath">fonts/segoe_ui_semilight.ttf</item>
        <item name="android:textColorHint">@color/text_gray_color</item>
        <item name="android:minHeight">40dip</item>
    </style>

    <style name="AdpMessageTextAppearance" parent="android:Widget.TextView">
        <item name="fontPath">fonts/segoe_ui.ttf</item>
        <item name="android:textSize">16sp</item>
    </style>


    <!-- Action bar -->
    <style name="ActionBar.Solid.Cobranza" parent="Widget.AppCompat.ActionBar.Solid">
        <item name="contentInsetStart">12dp</item>
        <item name="elevation">0dp</item>
        <item name="displayOptions">useLogo|showHome|showTitle</item>
        <item name="titleTextStyle">@style/actionbar_title_style</item>
    </style>

    <style name="actionbar_title_style" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@android:color/white</item>
        <item name="fontPath">fonts/segoe_ui_light.ttf</item>
    </style>

    <style name="DropDownListView.Cobranza" parent="@android:style/Widget.Holo.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_cobranza</item>
    </style>

    <!-- Controls style -->

    <style name="AutoCompleteTextViewCobranza" parent="android:Widget.Holo.AutoCompleteTextView">
        <item name="android:dropDownSelector">@drawable/cobranza_list_selector_holo_dark</item>
        <item name="android:background">@drawable/cobranza_edit_text_holo_dark</item>
    </style>

    <style name="ButtonCobranza" parent="android:Widget.Holo.Button">
        <item name="android:background">@drawable/cobranza_btn_default_holo_dark</item>
        <item name="android:minHeight">40dip</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="fontPath">fonts/segoe_ui_semilight.ttf</item>
    </style>

    <style name="ImageButtonCobranza" parent="android:Widget.Holo.ImageButton">
        <item name="android:background">@drawable/cobranza_btn_default_holo_dark</item>
    </style>

    <style name="TextAppearance.Cobranza.AlertDialog.Title"
           parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/cobranza_color</item>
        <item name="fontPath">fonts/segoe_ui_semilight.ttf</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
    </style>

</resources>