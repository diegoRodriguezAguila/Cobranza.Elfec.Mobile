<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/base_button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/btn_square"
        android:clickable="true"
        android:focusable="true"
        tools:ignore="UselessParent" >

        <ImageView
            android:id="@+id/btn_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/btn_collection"
            android:duplicateParentState="true"
            android:paddingBottom="22dp"
            android:src="@drawable/collection" />

        <TextView
            android:id="@+id/principal_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:duplicateParentState="true"
            android:gravity="center"
            android:lineSpacingExtra="-5sp"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:text="@string/btn_collection"
            android:textAppearance="@style/square_button_text_appererance"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/square_button_text_size" />
    </RelativeLayout>

</LinearLayout>