<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"  
    android:background="@drawable/bluetooth_device_list_item_background"
    android:padding="6dp"
    android:gravity="center_vertical"
    android:orientation="horizontal" >
    <ImageView
        android:id="@+id/user_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/zone_list_item_id_background"
        android:padding="8dp"
        android:contentDescription="@string/sample_printer_name"
        android:src="@drawable/printer" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:orientation="vertical">

		<TextView
	        android:id="@+id/lbl_printer_name"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/sample_printer_name"
	        android:textAppearance="@style/TextAppearance.CustomFont.Light"
	        android:textColor="@color/dark_gray"
	        android:textSize="18sp" />
	
	    <TextView
	        android:id="@+id/lbl_printer_mac"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/sample_printer_mac" 
	        android:textAppearance="@style/TextAppearance.CustomFont.Semilight"
		    android:textColor="@color/dark_gray"
		    android:textSize="13sp"  />
    </LinearLayout>
</LinearLayout>
