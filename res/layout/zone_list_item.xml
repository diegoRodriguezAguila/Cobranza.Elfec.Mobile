<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@drawable/zone_list_item_background"
    android:gravity="center_vertical"
    android:orientation="horizontal" >
    
    <TextView 
        android:id="@+id/txt_zone_id"
        android:layout_width="62dp"
        android:layout_height="38dp"
        android:gravity="center"
        android:background="@drawable/zone_list_item_id_background"
        android:textColor="@color/zone_list_item_id_text_color"
        android:includeFontPadding="false"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:textAppearance="@style/TextAppearance.CustomFont.Light"
        android:textSize="18sp"
        android:text="@string/sample_zone_id"/>
    <TextView 
        android:id="@+id/txt_zone_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:textAppearance="@style/TextAppearance.CustomFont.Light"
        android:textSize="18sp"
        android:textColor="@color/zone_list_item_text_color"
        android:text="@string/sample_zone_desc"/>
</LinearLayout>
