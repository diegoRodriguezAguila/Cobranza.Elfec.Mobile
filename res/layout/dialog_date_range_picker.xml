<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >
    
	<TextView 
	        android:id="@+id/lbl_pick_dates"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textAppearance="@style/TextAppearance.CustomFont.Semilight"
		    android:textColor="@color/gray_contrast_color"
		    android:layout_marginLeft="5dp"
		    android:layout_marginStart="5dp"
		    android:lineSpacingExtra="-4sp"
		    android:layout_marginTop="8dp"
		    android:text="@string/lbl_pick_dates"
		    android:textSize="18sp" />
	<TextView 
	        android:id="@+id/lbl_start_date"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textAppearance="@style/TextAppearance.CustomFont.Semilight"
		    android:textColor="@color/gray_contrast_color"
		    android:layout_marginLeft="5dp"
		    android:layout_marginStart="5dp"
		    android:lineSpacingExtra="-4sp"
		    android:layout_marginTop="@dimen/date_picker_range_text_margin_top"
		    android:text="@string/lbl_start_date"
		    android:textSize="16sp" />
	<DatePicker
	    android:id="@+id/start_date"
	    android:layout_width="wrap_content"
	    android:layout_height="200dp" 
	    android:layout_marginTop="@dimen/date_picker_margin_top"
	    android:scaleY="@fraction/date_picker_scale" 
		android:scaleX="@fraction/date_picker_scale"
	    android:calendarViewShown="false"/>
	
	<TextView 
	        android:id="@+id/lbl_end_date"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textAppearance="@style/TextAppearance.CustomFont.Semilight"
		    android:textColor="@color/gray_contrast_color"
		    android:layout_marginLeft="5dp"
		    android:layout_marginStart="5dp"
		    android:lineSpacingExtra="-4sp"
		    android:layout_marginTop="@dimen/date_picker_text_margin_top"
		    android:text="@string/lbl_end_date"
		    android:textSize="16sp" />
	<DatePicker
	    android:id="@+id/end_date"
	    android:layout_width="wrap_content"
	    android:layout_height="200dp" 
	    android:layout_marginTop="@dimen/date_picker_margin_top"
	    android:scaleY="@fraction/date_picker_scale" 
		android:scaleX="@fraction/date_picker_scale"
	    android:calendarViewShown="false"/>

</LinearLayout>
